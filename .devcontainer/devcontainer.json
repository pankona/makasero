{
  "name": "makasero Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "postStartCommand": "go run /workspaces/makasero/cmd/makasero-web-backend & (cd /workspaces/makasero/web && npm run dev &)",
  "forwardPorts": [
    3000,
    3001
  ],
  "portsAttributes": {
    "3000": {
      "label": "Go Backend API",
      "visibility": "private"
    },
    "3001": {
      "label": "Web Dev Server",
      "visibility": "public"
    }
  }
}
